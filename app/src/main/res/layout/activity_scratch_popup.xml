<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context="geon.follow_app.popup.ScratchPopup">

    <com.cooltechworks.views.ScratchTextView
            android:id="@+id/stRandome"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:gravity="center"
            android:textColor="@color/c_1e0d00"
            android:textSize="60dp"
            android:textStyle="bold"
            android:background="@color/c_ffffff"/>

    <LinearLayout
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/shape_border_000000">

        <TextView
                android:id="@+id/tvComment"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textColor="@color/c_1e0d00"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"/>

        <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/c_000000"/>

        <TextView
                android:id="@+id/tvConfirm"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="확인"
                android:textSize="20dp"
                android:textColor="@color/c_000000"
                android:gravity="center"/>
    </LinearLayout>
</LinearLayout>
