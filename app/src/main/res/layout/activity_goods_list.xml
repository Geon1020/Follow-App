<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/c_e1e1e1"
        android:gravity="center_vertical"
        tools:context="geon.follow_app.activity.GoodsListActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/c_ffdc37"
            android:orientation="horizontal"
            android:gravity="center_vertical">

        <ImageView
                android:id="@+id/ivBack"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/arrow_left"
                android:layout_marginLeft="10dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="뽑기"
                android:textColor="@color/c_000000"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/c_ffffff">

        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@mipmap/ic_launcher_round"
                android:layout_marginLeft="10dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ME"
                android:textSize="15dp"
                android:textColor="@color/c_1e0d00"
                android:layout_marginLeft="10dp"/>

        <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        <TextView
                android:id="@+id/tvWalkCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/c_000000"
                android:layout_marginRight="20dp"/>
    </LinearLayout>

    <TextView
            android:id="@+id/tvPickCount"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="15dp"
            android:textColor="@color/c_1e0d00"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/rvGoodsList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>
