<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="geon.follow_app.fragment.HomeFragment">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/c_e1e1e1">

            <ImageView
                    android:id="@+id/ivBackground"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="@color/c_1e0d00"/>

            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                    android:id="@+id/cpCount"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    app:cpb_background_progressbar_color="@color/c_e1e1e1"
                    app:cpb_background_progressbar_width="5dp"
                    app:cpb_progress="0"
                    app:cpb_progressbar_color="@color/c_ffdc37"
                    app:cpb_progressbar_width="10dp"/>

            <TextView
                    android:id="@+id/tvCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20dp"
                    android:textColor="@color/c_ffffff"
                    android:layout_marginTop="115dp"
                    android:layout_centerHorizontal="true"/>

            <TextView
                    android:id="@+id/tvPick"
                    android:layout_width="180dp"
                    android:layout_height="100dp"
                    android:text="뽑기"
                    android:textSize="15dp"
                    android:textColor="@color/c_000000"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/selector_box"
                    android:layout_below="@+id/ivBackground"/>

            <TextView
                    android:id="@+id/tvShop"
                    android:layout_width="180dp"
                    android:layout_height="100dp"
                    android:text="쇼핑"
                    android:textSize="15dp"
                    android:textColor="@color/c_000000"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/c_ffffff"
                    android:layout_below="@+id/ivBackground"
                    android:layout_alignParentRight="true"/>

            <TextView
                    android:id="@+id/tvWatch"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="캐시워치"
                    android:textSize="15dp"
                    android:textColor="@color/c_000000"
                    android:layout_below="@+id/tvPick"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:paddingLeft="20dp"
                    android:background="@color/c_ffffff"
                    android:gravity="center_vertical"/>

            <TextView
                    android:id="@+id/tvGame"
                    android:layout_width="180dp"
                    android:layout_height="100dp"
                    android:text="게임"
                    android:textSize="15dp"
                    android:textColor="@color/c_000000"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/c_ffffff"
                    android:layout_below="@+id/tvWatch"/>

            <TextView
                    android:id="@+id/tvFriend"
                    android:layout_width="180dp"
                    android:layout_height="100dp"
                    android:text="친구"
                    android:textSize="15dp"
                    android:textColor="@color/c_000000"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/c_ffffff"
                    android:layout_below="@+id/tvWatch"
                    android:layout_alignParentRight="true"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/tvFriend"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
